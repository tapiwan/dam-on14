extends ../layout

block content

  #asset(data-collection-id=asset._collectionId)

    .row.mt30
      .col-md-10.p0
        h1.bold #{title}
      .col-md-2.p0

    .row.mt30.box
        .col-md-6.imageArea

            if asset.type == "image"
                img(src='/' + asset.path)
            if asset.type == "pdf"
                i.thumb.fa.fa-5x.text-center(v-bind:class="fileClasses.pdf")
            if asset.type == "psd"
                i.thumb.fa.fa-5x(v-bind:class="fileClasses.default")
            if asset.type == "default"
                i.thumb.fa.fa-5x(v-bind:class="fileClasses.default")
