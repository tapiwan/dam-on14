extends layout

block content

  h1.bold.mt30 Dashboard

  .row.mt30
    .col-md-5.box
      h3 Collections

      ul.folderlist
        each collection, index in collections

          li
            a(href="/collections#"+collection.name.replace(/\s+/g, '')+"") #{collection.name}


    .col-md-2

    .col-md-5.box.activity
      h3 Your Activity

      table.table.table-striped
        tbody
          tr
            td
              i.fa.fa-cloud-download
            td 19.01.17
            td IMG_12332.jpg
            td
              i.fa.fa-file-image-o
          tr
            td
              i.fa.fa-cloud-download
            td 18.01.17
            td MOV_112.mp4
            td
              i.fa.fa-file-video-o
          tr
            td
              i.fa.fa-cloud-upload
            td 15.01.17
            td Calculation.pdf
            td
              i.fa.fa-file-pdf-o


  .row.mt30
    .col-md-12.box
      h3 Upload Area
      .row
        form#uploadWidget.col-md-12.dropzone.upload-area.text-center(enctype='multipart/form-data', action='/upload/assets', method='post')
          .fallback
            input(name='assets', type='file')
