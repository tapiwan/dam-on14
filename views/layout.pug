doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)

    //DISABLE CACHING
    meta(http-equiv='cache-control', content='max-age=0')
    meta(http-equiv='cache-control', content='no-cache')
    meta(http-equiv='expires', content='0')
    meta(http-equiv='expires', content='Tue, 01 Jan 1980 1:00:00 GMT')
    meta(http-equiv='pragma', content='no-cache')
    title #{title} - DiAM
    link(rel='shortcut icon', href='/favicon.png')
    link(rel='stylesheet', href='/css/lib/dropzone.min.css')
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='/css/lib/bootstrap-tagsinput.css')

  body
    include partials/header

    .container
      include partials/flash
      block content

    include partials/footer

    script(src='https://unpkg.com/vue/dist/vue.js')

    script(src='/js/lib/jquery-2.2.4.min.js')
    script(src='/js/lib/bootstrap.min.js')
    script(src='/js/lib/bootstrap-tagsinput.min.js')

    script(src='/js/lib/dropzone.min.js')
    script(src='/js/lib/piexif.js')
    script(src='/js/config.js')
    script(src='/js/main.js')
    script(src='/js/dropzone.js')